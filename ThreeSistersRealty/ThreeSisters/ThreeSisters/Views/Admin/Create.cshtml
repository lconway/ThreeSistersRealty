@model ThreeSisters.Models.Listing

@{
    ViewBag.Title = "Create";
}

<script type="text/javascript">
    $(document).ready(function () {
        $("#datepicker").datepicker();
    });
</script>

<h2>Create</h2>

@using (Html.BeginForm("Create", "Admin",
    FormMethod.Post, new { enctype = "multipart/form-data" })) {
    
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Listing</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.MSL)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MSL)
            @Html.ValidationMessageFor(model => model.MSL)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Street1)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Street1)
            @Html.ValidationMessageFor(model => model.Street1)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Street2)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Street2)
            @Html.ValidationMessageFor(model => model.Street2)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.City)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.City)
            @Html.ValidationMessageFor(model => model.City)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.State)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.State)
            @Html.ValidationMessageFor(model => model.State)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Zipcode)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Zipcode)
            @Html.ValidationMessageFor(model => model.Zipcode)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Neighborhood)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Neighborhood)
            @Html.ValidationMessageFor(model => model.Neighborhood)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SalesPrice)
        </div>
        <div class="editor-field">
            @Html.ValidationMessageFor(model => model.Neighborhood)
            @Html.EditorFor(model => model.SalesPrice)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DateListed)
        </div>

        <div class="editor-field">
            @Html.TextBoxFor(model => model.DateListed, new { id="datepicker" })
            @Html.ValidationMessageFor(model => model.DateListed)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Bedrooms)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Bedrooms)
            @Html.ValidationMessageFor(model => model.Bedrooms)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Bathrooms)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Bathrooms)
            @Html.ValidationMessageFor(model => model.Bathrooms)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.GarageSize)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.GarageSize)
            @Html.ValidationMessageFor(model => model.GarageSize)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SquareFeet)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SquareFeet)
            @Html.ValidationMessageFor(model => model.SquareFeet)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.LotSize)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.LotSize)
            @Html.ValidationMessageFor(model => model.LotSize)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Description, new {@rows="4", @cols="50"})
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="editor-label">
            Image
        </div>
        <div class="editor-field">
            <div>
                Upload new image: <input type="file" name="Image" />

            </div>
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
